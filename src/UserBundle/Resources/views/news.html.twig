{% extends "base.html.twig" %}
{% block pageName %}
{% endblock %}
{% block body %}
<div class="container">
    <div class="row">
        <div class="panel panel-alt1 col-md-8" style="padding: 0px">
            <div class="panel-heading">
                <span class="title">Recent : Co-Voiturage</span>
            </div>


            {% if cov is defined and cov |length != 0 %}

                {% for c in cov %}
                    <div style="padding-bottom: 2px;">
                        <table class="table table-striped table-fw-widget table-hover">
                            <tbody class="no-border-x">
                            <tr>
                                <td style="width: 100px;">{{ c.user.username | upper }}</td>
                                <td style="width: 320px;"><span class="labels">Depart : </span> {{ c.depart }}</td>
                                <td><span class="labels">Destination : </span> {{ c.destination }}</td>
                                {% if c.updated == null %}
                                    <td>{{ c.created |ago }}</td>
                                {% else %}
                                    <td>{{ c.updated |ago }}</td>
                                {% endif %}

                            </tr>
                            </tbody>
                        </table>

                    </div>

                {% endfor %}
            {% else %}
                <div class="panel-body">
                    Il n y a pas de demandes de co-voiturage
                </div>
            {% endif %}

        </div>
    </div>
</div>

{% endblock %}