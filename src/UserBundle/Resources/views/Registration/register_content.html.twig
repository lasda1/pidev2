
{% trans_default_domain 'FOSUserBundle' %}


{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register form-horizontal ' }}) }}

    <div class="title"><span>Sign up with</span></div>
    <div class="sign-up-form">
        <div class="form-group row social-signup">
            <div class="col-xs-6">
                <button type="button" class="btn btn-block btn-social btn-facebook"><i class="fa fa-facebook icon icon-left"></i> Facebook</button>
            </div>
            <div class="col-xs-6">
                <button type="button" class="btn btn-block btn-social btn-twitter"><i class="fa fa-twitter icon icon-left"></i> Twitter</button>
            </div>
        </div>
        <div class="title"><span class="title">Or</span></div>



        <div class="form-group">
            <div id="nick-handler" class="input-group"><span class="input-group-addon"><i class="icon s7-user"></i></span>
                {{ form_widget(form.nom,{'attr':{'class':'form-control','placeholder':'Saisir votre nom'}}) }}
            </div>
        </div>



        <div class="form-group">
            <div id="nick-handler" class="input-group"><span class="input-group-addon"><i class="icon s7-mail"></i></span>
                {{ form_widget(form.username,{'attr':{'class':'form-control','placeholder':"Saisir votre nom d'utilisateur"}}) }}

            </div>
        </div>

        <div class="form-group">
            <div id="nick-handler" class="input-group"><span class="input-group-addon"><i class="icon s7-mail"></i></span>
                {{ form_widget(form.prenom,{'attr':{'class':'form-control','placeholder':'Saisir votre prenom'}}) }}
            </div>
        </div>

        <div class="form-group">
            <div id="nick-handler" class="input-group"><span class="input-group-addon"><i class="icon s7-mail"></i></span>
                {{ form_widget(form.sexe,{'attr':{'class':'form-control','placeholder':'Saisir votre sexe'}}) }}
            </div>
        </div>

        <div class="form-group">
            <div id="nick-handler" class="input-group"><span class="input-group-addon"><i class="icon s7-mail"></i></span>

                    {{ form_widget(form.dateNaissance,{'attr':{'class':'form-control input-group date datetimepicker col-md-5 col-xs-7','data-min-view':'2','data-date-format':'yyyy-mm-dd','placeholder':'Saisir votre date de naissance'}}) }}
                    <span class="input-group-addon btn btn-primary"><i class="icon-th s7-date"></i></span>
            </div>
        </div>

        <div class="form-group">
            <div id="nick-handler" class="input-group"><span class="input-group-addon"><i class="icon s7-mail"></i></span>
                {{ form_widget(form.adresse,{'attr':{'class':'form-control','placeholder':'Saisir votre adresse'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div id="nick-handler" class="input-group"><span class="input-group-addon"><i class="icon s7-mail"></i></span>
                {{ form_widget(form.telephone,{'attr':{'class':'form-control','placeholder':'Saisir votre telephone'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div id="nick-handler" class="input-group"><span class="input-group-addon"><i class="icon s7-mail"></i></span>
                {{ form_widget(form.classe,{'attr':{'class':'form-control','placeholder':'Saisir votre classe'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div id="nick-handler" class="input-group"><span class="input-group-addon"><i class="icon s7-mail"></i></span>
                {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'Saisir votre email'}}) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-xs-6">
                <div id="password-handler" class="input-group"><span class="input-group-addon"><i class="icon s7-lock"></i></span>
                    {{ form_widget(form.plainPassword.first,{'attr':{'class':'form-control','placeholder':'Saisir votre mot de passe'}}) }}
                </div>
            </div>
            <div class="col-xs-6">
                <div id="confirm-handler" class="input-group"><span class="input-group-addon"><i class="icon s7-lock"></i></span>
                    {{ form_widget(form.plainPassword.second,{'attr':{'class':'form-control','placeholder':'confirmer'}}) }}

                </div>
            </div>
        </div>
    </div>
<p class="conditions">By creating an account, you agree with the <a href="#">Terms and Conditions</a>.</p>
<button type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-block btn-primary btn-lg">Sign Up</button>
        {{ form_end(form) }}














