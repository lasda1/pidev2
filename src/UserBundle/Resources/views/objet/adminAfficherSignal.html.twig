{% extends 'baseBack.html.twig' %}

{% block body %}
    <div class="col-sm-12">
        <div class="widget widget-fullwidth widget-small">
            <div class="widget-head">

                <div class="title">La Liste Des Réclamations Signalées</div>
            </div>
            <div class="table-responsive noSwipe">
                <table class="table table-striped table-fw-widget table-hover">
                    <thead>
                    <tr>
                        <th width="20%">User</th>
                        <th width="20%">Objet</th>
                        <th width="20%">Réclamation</th>
                        <th width="25%">Statut</th>
                        <th width="10%"></th>
                    </tr>
                    </thead>
                    {% for signal in signal %}
                        <tbody class="no-border-x">
                        <tr>
                            <td>{{ signal.user }}</td>
                            <td class="user-avatar"><img src="{{ asset(signal.interaction.idObjet.photo) }}"></td>
                            <td>{{ signal.interaction.statut }}</td>
                            <td>{{ signal.statut }}</td>
                            <td><td align="center" id="supprimer"><a href="{{ path("admin_supprimer_reclamation", { "id":signal.interaction.idObjet.id }) }}" ><button class="btn btn-danger"><div class="icon" data-toggle="modal" data-target="#Supprimer"><span class="s7-scissors" data-toggle="tooltip" data-placement="top" data-original-title="Annuler Réclamation"></span></div></button></a></td></td>
                        </tr>
                        </tbody>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}