{% extends 'baseBack.html.twig' %}
{% block body %}

    <div class="widget widget-fullwidth widget-small">
        <div class="widget-head">
            <div class="tools"><span class="icon s7-close"></span></div>

                <div class="title"><h3>La Liste Des Objets Non Approuv√©s</h3></div>
        </div>


        <table id="table1" class="table table-striped table-hover table-fw-widget results">

            <tbody> <thead>
            <tr>
                {#<th>User</th>#}
                <th>User</th>
                <th>Photo</th>
                <th>Date</th>
                <th>Type</th>
                <th>Description</th>
                <th>Lieu</th>
                <th>Nature</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            {% for objet in objet %}
                <tr class="odd gradeX">
                    <td>{{ objet.User }}</td>
                    <td class="center"><img id="photo" src="{{ asset(objet.Photo) }}"  height="120" width="120"></td>
                    <td>{{ objet.Date |date }}</td>
                    <td>{{ objet.Type }}</td>
                    <td class="center">{{ objet.Description }}</td>
                    <td>{{ objet.Lieu }}</td>
                    <td>{{ objet.Nature }}</td>
                    <td align="center" id="supprimer"><a href="{{ path("admin_objet_supprimer", { "id":objet.id }) }}" ><button class="btn btn-danger"><div class="icon" data-toggle="modal" data-target="#Supprimer"><span class="s7-scissors" data-toggle="tooltip" data-placement="top" data-original-title="Supprimer"></span></div></button></a></td>
                    <td><a href="{{ path("admin_fct_OBJET_approuver", { "id":objet.id }) }}" ><button class="btn btn-alt1"><div class="icon" data-toggle="modal" data-target="#Approuver"><span class="s7-pin" data-toggle="tooltip" data-placement="top" data-original-title="Approuver"></span></div></button></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% endblock %}

