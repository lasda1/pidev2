{% extends '::base.html.twig' %}
{% block customStyle %}

{% endblock %}
{% block body %}
    {{ form_start(form) }}
    <div class="main-content">
        <div class="email-subject">
            {{ form_widget(form.titre,{'attr':{'class':'form-control','placeholder':'Your subject'}}) }}
        </div>
        <div class="email editor">

            <div class="note-editable panel-body" contenteditable="true" style="height: 200px;">
                {{ form_widget(form.message,{'attr':{'class':'note-image-url form-control col-md-12','style':'height: 173px;'}}) }}
            </div>
           <div class="form-group">
                <button type="submit" class="btn btn-primary btn-space"><i class="icon s7-mail"></i> Send</button>
                <button class="btn btn-default btn-space"><i class="icon s7-close"></i> Cancel</button>
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}