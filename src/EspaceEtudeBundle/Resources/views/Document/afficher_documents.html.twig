{% block customScript %}
    <script>
        $("#docName").keyup(function () {
            var input = $("#docName").val();
            var all =$("#all").val();
            all++;
            if(input===""){
                for (var j=1;j<all;j++){
                    $("#"+j).show();
                }
            }else {
                for (var i=1;i<all;i++){
                    var name=$("#name"+i).text();
                    if (!(name.indexOf(input) + 1 )){

                        $("#"+i).hide();
                    }else{
                        $("#"+i).show();
                    }

                }
            }





        });


    </script>
{% endblock customScript %}