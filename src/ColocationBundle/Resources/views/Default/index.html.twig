
{% extends '::base.html.twig' %}
{% block body %}

    <div class="row">
        <div class="col-sm-12">
            <div class="widget widget-fullwidth widget-small">
                <div class="widget-head">
                    <div class="tools"><span class="icon s7-upload"></span><span class="icon s7-edit"></span><span class="icon s7-close"></span></div>
                    <div class="title">Les Annonces</div>
                </div>
                <table id="table3" class="table table-striped table-hover table-fw-widget">


                    {% for colocation  in colocations %}
                        <tr  class="even gradeC">
                            <td><h1>{{ colocation.titre}}</h1></td>
                        </tr>
                        <tr class="odd gradeX">
                            <td
                                    width=70% height=70%><img src="{{ asset('uploads/photos/'~colocation.photo) }}" width="300px" /> </td>
                            <td  width=70% height=70%><img src="{{ asset('uploads/photos/'~colocation.photo1) }}" width="300px" /> </td>
                            <td  width=70% height=70%><img src="{{ asset('uploads/photos/'~colocation.photo2) }}" width="300px" /> </td>


                        </tr>
                        <tr class="even gradeC">
                            <td>{{ colocation.loyer }}</td>
                            <td>{{ colocation.type}}</td>
                            <td>{{ colocation.meuble }}</td>

                        </tr>


                        <tr  class="even gradeA">
                            <td   COLSPAN=3>{{ colocation.description }}</td>

                        </tr >
                        <tr   class="odd gradeA">
                            <td height=100% ><a  href="{{ path('supprimer',{'id':colocation.id}) }}">supprimer l'annonce</a></td>
                        </tr>

                        <tr   class="odd gradeA">
                            <td></td>
                        </tr>
                        <tr   class="odd gradeA">
                            <td></td>
                        </tr>
                        <tr   >
                            <td></td>
                        </tr>

                    {% endfor %}

                </table>
            </div>
        </div>
    </div>











{% endblock %}



