{% extends "::base.html.twig" %}

{% block title %}Recherche{% endblock %}

{% block body %}

    <form>
        <input type="text" name="serie" id="cle">
    </form>
    <table id="table1" class="table table-striped table-hover table-fw-widget">
        <thead>
        <tr>
            <th>User</th>
            <th>Photo</th>
            <th>Type</th>
            <th>Description</th>
            <th>Lieu</th>
            <th>Nature</th>
        </tr>
        </thead>

    </table>
    <script src="{{ asset('js/jquery-3.3.1.js') }}">

    </script>
    <script>
        $('#cle').keyup(
            function () {
                var input = $('#cle').val();
                $.ajax(
                    {
                        url:"{{ path('search_objet_ajax') }}",
                        type:"POST",
                        data:{'search':input},
                        success:function (data) {
                            $.each(data,function (i,ele) {
                                $('#tab').append(
                                    "<tr>" +
                                    "<td>"+ele.User+"</td>" +
                                    "<td>"+ele.Photo+"</td>" +
                                    "<td>"+ele.search+"</td>" +"<td>"+ele.Description+"</td>" +"<td>"+ele.Lieu+"</td>" +"<td>"+ele.Nature+"</td>" +
                                    "</tr>")

                            })


                        }
                    }
                );

            }
        );

    </script>


{% endblock %}