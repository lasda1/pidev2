{% extends "::base.html.twig" %}

{% block title %}Affichage{% endblock %}

{% block body %}
    <div class="widget widget-fullwidth widget-small">
        <div class="widget-head">
            <div class="tools"><span class="icon s7-close"></span></div>
            {% if nature is defined %}
            <div class="title"><h3>La Liste Des Objets{% if nature==1  %} Trouv√©s{% elseif nature==2  %} Perdus{% endif %}</h3></div>
            {% endif %}
        </div>
        <table id="table1" class="table table-striped table-hover table-fw-widget">
            <thead>
            <tr>
                <th>User</th>
                <th>Photo</th>
                <th>Date</th>
                <th>Type</th>
                <th>Description</th>
                <th>Lieu</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for objet in objet %}

                <tr class="odd gradeX">
                    <td>{{ objet.User }}</td>
                    <td class="center"><img id="photo" src="{{ asset(objet.Photo) }}"  height="120" width="120"></td>
                    <td>{{ objet.Date |date }}</td>
                    <td>{{ objet.Type }}</td>
                    <td class="center">{{ objet.Description }}</td>
                    <td>{{ objet.Lieu }}</td>
                    <td align="center" id="modifier">{% if objet.User.id==app.user.id %}<a href="{{ path("updateobj", { "id":objet.id }) }}" ><button class="btn btn-alt1"><div class="icon" data-toggle="modal" data-target="#Modifier"><span class="s7-note2" data-toggle="tooltip" data-placement="top" data-original-title="Modifier"></span></div></button></a>{% endif %}</td>
                    <td align="center" id="supprimer">{% if objet.User.id==app.user.id %}<a href="{{ path("deleteobj", { "id":objet.id }) }}" ><button class="btn btn-danger"><div class="icon" data-toggle="modal" data-target="#Supprimer"><span class="s7-shield" data-toggle="tooltip" data-placement="top" data-original-title="Supprimer"></span></div></button></a>{% endif %}</td>
                    <td>"{{ facebookButton() }}"</td>
                </tr>

            {% endfor %}

            </tbody>
        </table>
    </div>

   {% endblock %}
