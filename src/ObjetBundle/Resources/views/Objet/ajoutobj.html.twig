{% extends "::base.html.twig" %}

{% block pageName %}
    <h2>Ajouter Un Objet</h2>
    <ol class="breadcrumb">
        <li><a href="{{ path('objet_homepage') }}">Les Objets</a></li>
        <li class="active">Ajouter Un Objet</li>
    </ol>
{% endblock %}

{% block body %}
    {{ form_start(form) }}
<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Basic Form</h3>
            </div>
            <div class="panel-body">
                <form role="form">
                    <div class="form-group">
                        <label>Description</label>
                        {{ form_widget(form.description) }}
                    </div>
                    <div class="form-group">
                        <label>Date</label>
                        {{ form_widget(form.date) }}
                    </div>
                    <div class="form-group">
                        <label>Type</label>
                        {{ form_widget(form.type) }}
                    </div>
                    <div class="form-group">
                        <label>Lieu</label>
                        {{ form_widget(form.lieu) }}
                    </div>
                    <div class="form-group">
                        <label>Photo</label>
                        {{ form_widget(form.photo) }}
                    </div>

                    <div class="text-right">
                        {{ form_end(form) }}
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

{% endblock %}
